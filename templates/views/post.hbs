<form action="" onsubmit="return validation()">
    <div class="container my-4">
        <div class="container ">
            <h2>Post the blog</h2><hr></div>
            <div class="card my-4">
                <div class="card-body">
                    <div class="form-group">
                        <h5 class="card-title my-3"> Your Name </h5>
                        <input type="name" class="form-control user" id="addName" aria-describedby="title" required 
                            placeholder="Enter Your Name" name="user" autocomplete="off">
                    </div> 
                    <div class="form-group">
                        <h5 class="card-title my-3">Blog Title</h5>
                        <input type="text" class="form-control blogTitle" id="addTitle" aria-describedby="title" required
                            placeholder="Enter title" name="BlogTitle" autocomplete="off">
                    </div>
                    <div class="form-group my-3">
                        <h5 class="card-title"> Post Blog date </h5>
                        <input type="date" required class="form-control blodDate" id="addDate" aria-describedby="date" 
                            placeholder="Enter date" name="PostDate" autocomplete="off">
                    </div>
                    <h5 class="card-title my-3">Started The Blog!</h5>
                    <div class="form-group mb-3">
                        <textarea class="form-control startBlog" required id="addTxt" rows="3"
                            placeholder="Start Your Blog..." name="TextArea" autocomplete="off"></textarea>
                    </div>
                    <input type="submit" value="Publish" class="btn btn-primary my-3" name="submit">
                </div>
                </form>
            </div>
            <hr>
            <h2>Post Blog</h2>
            <hr>
